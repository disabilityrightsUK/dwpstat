year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{dwpstat}: Access 'Stat-Xplore' data on the UK benefits system",
         author = c(person("Evan", "Odell")),
         year = year,
         note = note,
         doi = "",
         url = "https://github.com/evanodell/dwpstats")
